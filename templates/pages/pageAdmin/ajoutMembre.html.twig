 {% extends "layout-home.html.twig" %} 
 {% block title %}Enregistrement nouveau membre{% endblock %} 
 {% block content %}
<h1>Insérer un nouveau membre</h1>
<form role="form" method="POST" action="{{ path('ajoutMembre') }}">
    <div class="row">
    
        <!-- PSEUDO -->
        <div class="col-md-6">
            <div class="form-group form-group-default ">
                <label>Pseudo</label>
                <input type="text" id="username" name="username" class="form-control" required>
            </div>
        </div>

        <!-- STATUT -->
        <div class="col-md-6">
            <label>Statut</label>
            <select id="statut" name="statut" class="cs-select cs-skin-slide" data-init-plugin="cs-select">
                <option value="admin">Admin</option>
                <option value="membre">Membre</option>
                <option value="expert">Expert</option>
            </select>
        </div>
    </div>

    <div class="row">
        <!-- NOM -->
        <div class="col-sm-6">
            <div class="form-group form-group-default">
                <label>Prénom</label>
                <input type="text" id="prenom" name="prenom" class="form-control" required>
            </div>
        </div>
        <!-- PERNOM -->
        <div class="col-sm-6">
            <div class="form-group form-group-default">
                <label>Nom</label>
                <input type="text" id="nom" name="nom" class="form-control">
            </div>
        </div>
    </div>
    <!-- EMAIL -->
    <div class="form-group form-group-default">
        <label>Email</label>
        <input type="email" id="email" name="email" class="form-control" required>
    </div>
    <!-- MDP -->
    {# <div class="form-group form-group-default">
        <label>Mot de passe</label>
        <input type="password" id="lastname" name="lastname" class="form-control" required>
    </div> #}

    <!-- TELEPHONNE -->
    <div class="form-group form-group-default">
        <label>Numéro de téléphone</label>
        <input type="tel" id="phone" name="phone" class="form-control" required>
    </div>
    <!-- POSTE -->
    {# <div class="form-group form-group-default">
        <label>Poste</label>
        <input type="text" id="position" name="position" class="form-control" required>
    </div> #}

    <!-- Validation -->

    <button type="submit" class="btn btn-primary btn-animated from-left fa fa-check" type="button">
                <span>Enregistrer</span>
    </button>

</form>
{% endblock %}