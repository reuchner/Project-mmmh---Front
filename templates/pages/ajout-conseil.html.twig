{% extends "layout-home.html.twig" %}

{% block head %}
{{ parent() }}

{% block title %}Ajoutez un conseil{% endblock %}
<link href="assets/plugins/bootstrap-datepicker/css/datepicker3.css" rel="stylesheet" type="text/css" media="screen"> 
{% endblock %}

 {% block content %}
    <!-- START card -->
    <div class="card card-transparent">
        <div class="card-block">
            <div class="row">
                <div class="col-md-10">
                    <h3>Ajoutez un conseil</h3><br>
                   
                        {# INFOS GENERALES #}
                        <form id="form-group row" method="post" class="form-horizontal" role="form" autocomplete="off">
                        <div class="form-group row">
                            <label for="fname" class="col-md-2 control-label" >Nom</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="fname" placeholder="Indiquez votre nom et prénom ou votre nom d'utilisateur" name="name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="fname" class="col-md-2 control-label">Qualification</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" id="fname" placeholder="Nutritioniste, médecin, professeur de yoga..." name="name" required>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="name" class="col-md-2 control-label">Titre du conseil</label>
                            <div class="col-md-10">
                                <textarea rows="4" class="form-control" id="name" placeholder="N'oubliez pas de vous hydrater !" required></textarea>
                            </div>
                        </div>
                         <div class="form-group row">
                            <label for="name" class="col-md-2 control-label">Description</label>
                            <div class="col-md-10">
                                <textarea rows="4" class="form-control" id="name" placeholder="Le corps humain a besion de 2L d'eau par jour..." required></textarea>
                            </div>
                        </div>


                        {# IMAGES #}
                        <div class="form-group row">
                            <div class="col-md-2">
                            <label for="position" class="control-label">Images à ajouter</label>
                            </div>
                            <div class="col-md-10">                                                  
                                <div class="row">
                                    <div class="col-md-11">
                                        <input type="file" class="form-control" id="position" placeholder="Format .jpg ou .png" required>
                                    </div>
                                    <div class="col-md-1">
                                        <button type="button" class="btn btn-primary float-right">+</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <label for="position" class="control-label"></label>
                            </div>
                            <div class="col-md-10">                                                  
                                <button type="submit" class="btn btn-lg btn-success col-md-4 offset-4">Envoyer</button>
                            </div>
                        </div>
                    </form>
                </div> <!-- END div col-md-10 -->
            </div> <!-- END div row -->
        </div> <!-- END card block -->
    </div> <!-- END card -->
    
{% endblock %}